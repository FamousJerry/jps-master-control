rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    function isAdmin() {
      return request.auth != null && request.auth.token.role == 'Admin';
    }

    // Clients: anyone signed-in can read; only Admins can write.
    match /clients/{id} {
      allow read: if request.auth != null;
      allow write: if isAdmin();
    }

    // Read access for other collections while we iterate.
    match /{document=**} {
      allow read: if request.auth != null;
    }
  }
}
